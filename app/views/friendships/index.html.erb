<div>
  <div>
    <h1>
      List of all friendships
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new friendship
    </h2>

    <form action="/insert_friendship" method="post">
      <div>
        <label for="sender_id_box">
          Sender
        </label>

        <input type="text" id="sender_id_box" name="query_sender_id">
      </div>

      <div>
        <label for="receiver_id_box">
          Receiver
        </label>

        <input type="text" id="receiver_id_box" name="query_receiver_id">
      </div>

      <button>
        Create friendship
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Sender
        </th>

        <th>
          Receiver
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_friendships.each do |a_friendship| %>
      <tr>
        <td>
          <%= a_friendship.id %>
        </td>

        <td>
          <%= a_friendship.sender_id %>
        </td>

        <td>
          <%= a_friendship.receiver_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_friendship.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_friendship.updated_at) %> ago
        </td>

        <td>
          <a href="/friendships/<%= a_friendship.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
