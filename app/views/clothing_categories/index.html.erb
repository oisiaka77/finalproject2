<div>
  <div>
    <h1>
      List of all clothing categories
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new clothing category
    </h2>

    <form action="/insert_clothing_category" method="post">
      <div>
        <label for="category_name_box">
          Category name
        </label>

        <input type="text" id="category_name_box" name="query_category_name">
      </div>

      <button>
        Create clothing category
      </button>

      
    </form>

    <div>
      <%user_id = session.fetch(:user_info_id)%>
        <a href="/users/<%=user_id%>">
          Go back
        </a>
      </div>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Category name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_clothing_categories.each do |a_clothing_category| %>
      <tr>
        <td>
          <%= a_clothing_category.id %>
        </td>

        <td>
          <%= a_clothing_category.category_name %>
        </td>

        <td>
          <%= time_ago_in_words(a_clothing_category.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_clothing_category.updated_at) %> ago
        </td>

        
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
