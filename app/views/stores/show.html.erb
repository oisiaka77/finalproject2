<div>
  <div>
    <h1>
      <%= @the_store.name %> details
      <% url_name = @the_store.name.downcase.gsub(/\s+/, "").to_s %>
     <div> <img src="//logo.clearbit.com/prettylittlething.us"></div>
    </h1>

    <div>
      <div>
        <a href="/stores">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_store/<%= @the_store.id %>">
          Delete store
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_store.name %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <%= @the_store.address %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_store.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_store.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

<table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Price
        </th>

        <th>
          Store
        </th>

        <th>
          Item url
        </th>

        <th>
          Clothing category
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>

        
        </th>
      </tr>

      <h2> List of all items from <%=@the_store.name%> </h2>

        <% matching_store_items = @list_of_items.where({:store_id => @the_store.id})%>
        <% list_of_store_items = matching_store_items.order({ :created_at => :desc })%>
        
        <% list_of_store_items.each do |an_item| %>
      <tr>
        <td>
          <%= an_item.id %>
        </td>

        <td>
          <%= an_item.description %>
        </td>

        <td>
          <%= an_item.price %>
        </td>

        <td>
          <%= an_item.store_name %>
        </td>

        <td>
          <a href="<%= an_item.item_url %>"> View item </a>
        </td>

        <td>
          <%= an_item.category %>
        </td>

        <td>
          <%= time_ago_in_words(an_item.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_item.updated_at) %> ago
        </td>

        <td>
          <a href="/items/<%= an_item.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Edit store
    </h2>

    <form action="/modify_store/<%= @the_store.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_store.name %>">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address" value="<%= @the_store.address %>">
      </div>

      <button>
        Update store
      </button>
    </form>
  </div>
</div>

<hr>
